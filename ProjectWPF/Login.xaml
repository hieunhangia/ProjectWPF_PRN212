<Window x:Class="ProjectWPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectWPF"
        mc:Ignorable="d"
        Title="Login">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,65,0,0" TextWrapping="Wrap" Text="Đăng Nhập" VerticalAlignment="Top" FontSize="99"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="42,266,0,0" VerticalAlignment="Top" FontSize="36"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="233,270,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="676" FontSize="36"/>
        <Label Content="Mật Khẩu" HorizontalAlignment="Left" Margin="42,372,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Button x:Name="LoginButton" Content="Đăng Nhập" HorizontalAlignment="Center" Margin="0,489,0,0" VerticalAlignment="Top" Height="86" Width="353" FontSize="55" BorderBrush="#FFE2EFCB" Click="LoginButton_Click" IsDefault="True"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="233,380,0,0" VerticalAlignment="Top" Width="676" Height="50" PasswordChar="*" FontSize="36"/>
    </Grid>
</Window>
