<Window x:Class="ProjectWPF.AdminWindows.SaveSeller"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectWPF.AdminWindows"
        mc:Ignorable="d"
        Title="SaveSeller"
        Loaded="Window_Loaded">
    <Grid>
        <TextBlock x:Name="SaveSellerTitleTextBlock" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="SaveSellerTitle" VerticalAlignment="Top" FontSize="69" Height="108"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="40,130,0,0" VerticalAlignment="Top" Height="42" Width="96" FontSize="24"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="208,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="694" Height="42" FontSize="24"/>
        <Label Content="Họ Và Tên" HorizontalAlignment="Left" Margin="40,250,0,0" VerticalAlignment="Top" Height="42" Width="130" FontSize="24"/>
        <TextBox x:Name="FullNameTextBox" HorizontalAlignment="Left" Margin="208,250,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="694" Height="42" FontSize="24"/>
        <Label Content="Ngày Sinh" HorizontalAlignment="Left" Margin="40,510,0,0" VerticalAlignment="Top" Height="42" Width="130" FontSize="24"/>
        <Label Content="CMND/CCCD" HorizontalAlignment="Left" Margin="40,450,0,0" VerticalAlignment="Top" Height="42" Width="158" FontSize="24"/>
        <TextBox x:Name="IdentifyTextBox" HorizontalAlignment="Left" Margin="208,450,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="694" Height="42" FontSize="24"/>
        <DatePicker x:Name="BirthDatePicker"
                    Text="Chọn ngày"
                    HorizontalAlignment="Left" Margin="208,510,0,0" VerticalAlignment="Top" Height="42" Width="446" FontSize="24"/>
        <Label Content="Mật Khẩu" HorizontalAlignment="Left" Margin="40,188,0,0" VerticalAlignment="Top" Height="42" Width="130" FontSize="24"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="208,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="694" Height="42" FontSize="24"/>
        <Label Content="Quê Quán" HorizontalAlignment="Left" Margin="40,300,0,0" VerticalAlignment="Top" Height="42" Width="130" FontSize="24"/>
        <Label Margin="59,347,0,0" Width="177" VerticalAlignment="Top" Height="33" HorizontalAlignment="Left" FontSize="20" Content="Tỉnh/Thành Phố"/>
        <ComboBox x:Name="ProvinceCityComboBox"
                  DisplayMemberPath="Name" SelectedValuePath="Code"
                  HorizontalAlignment="Left" Margin="220,347,0,0" VerticalAlignment="Top" Width="297" Height="33" SelectionChanged="ProvinceCityComboBox_SelectionChanged" FontSize="20"/>
        <Label Margin="543,347,0,0" Width="111" VerticalAlignment="Top" Height="42" HorizontalAlignment="Left" FontSize="20" Content="Xã/Phường" RenderTransformOrigin="0.492,0.059"/>
        <ComboBox x:Name="CommuneWardComboBox"
                  DisplayMemberPath="Name" SelectedValuePath="Code"
                  HorizontalAlignment="Left" Margin="654,347,0,0" VerticalAlignment="Top" Width="248" Height="33" FontSize="20"/>
        <Label Width="163" VerticalAlignment="Top" Margin="59,394,0,0" Height="34" HorizontalAlignment="Left" FontSize="20" Content="Địa chỉ chi tiết"/>
        <TextBox x:Name="SpecificAddressTextBox" Width="682" VerticalAlignment="Top" TextWrapping="Wrap" Margin="220,394,0,0" Height="34" HorizontalAlignment="Left" FontSize="20"/>
        <CheckBox x:Name="StatusCheckBox" HorizontalAlignment="Left" Margin="862,516,0,0" VerticalAlignment="Top" Width="20">
            <CheckBox.Resources>
                <Style TargetType="CheckBox">
                    <Setter Property="LayoutTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="2" ScaleY="2"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </CheckBox.Resources>
        </CheckBox>
        <Label Content="Mở Khoá?" HorizontalAlignment="Left" Margin="735,510,0,0" VerticalAlignment="Top" Height="42" Width="122" FontSize="24"/>
        <Button x:Name="SaveSellerButton" Content="SaveSellerButton" HorizontalAlignment="Center" Margin="0,573,0,0" VerticalAlignment="Top" Height="65" Width="398" FontSize="36" Click="SaveSellerButton_Click"/>
        <Button x:Name="ResetButton" Content="Đặt Lại" HorizontalAlignment="Left" Margin="59,585,0,0" VerticalAlignment="Top" Height="41" Width="167" FontSize="24" Click="ResetButton_Click"/>
        <Button x:Name="DeleteSellerButton" Content="Xoá Người Bán" HorizontalAlignment="Left" Margin="735,585,0,0" VerticalAlignment="Top" FontSize="24" Height="41" Width="167" Background="#FFFD9B9B" Foreground="Black" Click="DeleteSellerButton_Click"/>
    </Grid>

</Window>
