<Window x:Class="ProjectWPF.SellerWindows.ProductDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectWPF.SellerWindows"
        mc:Ignorable="d"
        Title="Chi tiết sản phẩm" Height="650" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Chi tiết sản phẩm" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20" Grid.Row="0"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Border BorderBrush="Gray" BorderThickness="1" Padding="15" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="ID:" FontWeight="Bold" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
                        <TextBlock Text="{Binding Id}" Grid.Row="0" Grid.Column="1" Margin="10,5"/>

                        <TextBlock Text="Tên sản phẩm:" FontWeight="Bold" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
                        <TextBlock Text="{Binding Name}" Grid.Row="1" Grid.Column="1" Margin="10,5" TextWrapping="Wrap"/>

                        <TextBlock Text="Mô tả:" FontWeight="Bold" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
                        <TextBlock Text="{Binding Description}" Grid.Row="2" Grid.Column="1" Margin="10,5" TextWrapping="Wrap"/>

                        <TextBlock Text="Giá:" FontWeight="Bold" Grid.Row="3" Grid.Column="0" Margin="0,5"/>
                        <TextBlock Text="{Binding Price, StringFormat={}{0:N0} VND}" Grid.Row="3" Grid.Column="1" Margin="10,5"/>

                        <TextBlock Text="Đơn vị:" FontWeight="Bold" Grid.Row="4" Grid.Column="0" Margin="0,5"/>
                        <TextBlock Text="{Binding ProductUnit.Name}" Grid.Row="4" Grid.Column="1" Margin="10,5"/>

                        <TextBlock Text="Trạng thái:" FontWeight="Bold" Grid.Row="5" Grid.Column="0" Margin="0,5"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" Margin="10,5">
                            <TextBlock.Text>
                                <Binding Path="IsActive">
                                    <Binding.Converter>
                                        <local:BooleanToStatusConverter/>
                                    </Binding.Converter>
                                </Binding>
                            </TextBlock.Text>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                            <Setter Property="Foreground" Value="Green"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Product Batches Section -->
                <Border BorderBrush="Gray" BorderThickness="1" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Lô hàng:" FontWeight="Bold" FontSize="16" 
                                   Grid.Row="0" Margin="0,0,0,10"/>

                        <ListView Grid.Row="1" ItemsSource="{Binding ProductBatches}" 
                                  Height="200" BorderBrush="LightGray" BorderThickness="1">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="ID" Width="80" DisplayMemberBinding="{Binding Id}"/>
                                    <GridViewColumn Header="Ngày hết hạn" Width="150" 
                                                    DisplayMemberBinding="{Binding ExpiryDate, StringFormat={}{0:dd/MM/yyyy}}"/>
                                    <GridViewColumn Header="Số lượng" Width="120" DisplayMemberBinding="{Binding Quantity}"/>
                                    <GridViewColumn Header="Trạng thái" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <Binding Path="ExpiryDate" Converter="{x:Static local:ExpiryStatusConverter.Instance}"/>
                                                    </TextBlock.Text>
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ExpiryDate, Converter={x:Static local:IsExpiredConverter.Instance}}" Value="True">
                                                                    <Setter Property="Foreground" Value="Red"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ExpiryDate, Converter={x:Static local:IsExpiredConverter.Instance}}" Value="False">
                                                                    <Setter Property="Foreground" Value="Green"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="2" Content="Đóng" HorizontalAlignment="Center" 
                Padding="20,8" Margin="0,20,0,0" Click="Close_Click"
                Background="LightCoral" BorderBrush="DarkRed"/>
    </Grid>
</Window>