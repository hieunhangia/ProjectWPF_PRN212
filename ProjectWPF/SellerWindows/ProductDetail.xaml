<Window x:Class="ProjectWPF.SellerWindows.ProductDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectWPF.SellerWindows"
        mc:Ignorable="d"
        Title="Chi Tiết Sản Phẩm"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        MinWidth="900"
        MinHeight="700"
        Width="950"
        Height="750">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#007ACC"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#F44336"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
        <SolidColorBrush x:Key="LightGrayBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="DarkGrayBrush" Color="#757575"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#212121"/>
        <SolidColorBrush x:Key="WhiteBrush" Color="White"/>

        <!-- Base Styles -->
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGrayBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="FieldLabelTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGrayBrush}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="FieldValueTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <Style x:Key="SectionTitleTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="BaseButton" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="25,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="4" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
            <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
        </Style>

        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
            <Setter Property="Background" Value="{StaticResource DarkGrayBrush}"/>
        </Style>

        <!-- ListView Style -->
        <Style TargetType="ListView">
            <Setter Property="BorderBrush" Value="{StaticResource LightGrayBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        </Style>

        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource LightGrayBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Chi Tiết Sản Phẩm" FontSize="32" FontWeight="Bold" 
                   Foreground="{StaticResource ForegroundBrush}" Margin="0,0,0,20"/>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Product Information Section -->
                <Border BorderBrush="{StaticResource LightGrayBrush}" BorderThickness="1" 
                        CornerRadius="4" Padding="20" Margin="0,0,0,20" Background="{StaticResource WhiteBrush}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Thông Tin Sản Phẩm" Style="{StaticResource SectionTitleTextBlock}" Grid.Row="0"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="ID:" Style="{StaticResource FieldLabelTextBlock}" Grid.Row="0" Grid.Column="0"/>
                            <TextBlock Text="{Binding Id}" Style="{StaticResource FieldValueTextBlock}" Grid.Row="0" Grid.Column="1"/>

                            <TextBlock Text="Tên sản phẩm:" Style="{StaticResource FieldLabelTextBlock}" Grid.Row="1" Grid.Column="0"/>
                            <TextBlock Text="{Binding Name}" Style="{StaticResource FieldValueTextBlock}" Grid.Row="1" Grid.Column="1"/>

                            <TextBlock Text="Mô tả:" Style="{StaticResource FieldLabelTextBlock}" Grid.Row="2" Grid.Column="0"/>
                            <TextBlock Text="{Binding Description}" Style="{StaticResource FieldValueTextBlock}" Grid.Row="2" Grid.Column="1"/>

                            <TextBlock Text="Giá:" Style="{StaticResource FieldLabelTextBlock}" Grid.Row="3" Grid.Column="0"/>
                            <TextBlock Text="{Binding Price, StringFormat={}{0:N0} VND}" Style="{StaticResource FieldValueTextBlock}" 
                                       Grid.Row="3" Grid.Column="1" FontWeight="Bold" Foreground="{StaticResource SecondaryBrush}"/>

                            <TextBlock Text="Đơn vị:" Style="{StaticResource FieldLabelTextBlock}" Grid.Row="4" Grid.Column="0"/>
                            <TextBlock Text="{Binding ProductUnit.Name}" Style="{StaticResource FieldValueTextBlock}" Grid.Row="4" Grid.Column="1"/>

                            <TextBlock Text="Trạng thái:" Style="{StaticResource FieldLabelTextBlock}" Grid.Row="5" Grid.Column="0"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Margin="10,5" FontWeight="Bold" FontSize="14" VerticalAlignment="Top">
                                <TextBlock.Text>
                                    <Binding Path="IsActive">
                                        <Binding.Converter>
                                            <local:BooleanToStatusConverter/>
                                        </Binding.Converter>
                                    </Binding>
                                </TextBlock.Text>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Product Batches Section -->
                <Border BorderBrush="{StaticResource LightGrayBrush}" BorderThickness="1" 
                        CornerRadius="4" Padding="20" Background="{StaticResource WhiteBrush}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Danh Sách Lô Hàng" Style="{StaticResource SectionTitleTextBlock}" Grid.Row="0"/>

                        <ListView Grid.Row="1" ItemsSource="{Binding ProductBatches}" 
                                  MinHeight="250" MaxHeight="350" FontSize="14">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="ID" Width="100" DisplayMemberBinding="{Binding Id}"/>
                                    <GridViewColumn Header="Ngày Hết Hạn" Width="180" 
                                                    DisplayMemberBinding="{Binding ExpiryDate, StringFormat={}{0:dd/MM/yyyy}}"/>
                                    <GridViewColumn Header="Số Lượng" Width="150" DisplayMemberBinding="{Binding Quantity}"/>
                                    <GridViewColumn Header="Trạng Thái" Width="150">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock FontWeight="Bold">
                                                    <TextBlock.Text>
                                                        <Binding Path="ExpiryDate" Converter="{x:Static local:ExpiryStatusConverter.Instance}"/>
                                                    </TextBlock.Text>
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ExpiryDate, Converter={x:Static local:IsExpiredConverter.Instance}}" Value="True">
                                                                    <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding ExpiryDate, Converter={x:Static local:IsExpiredConverter.Instance}}" Value="False">
                                                                    <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="5"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Đóng" Style="{StaticResource CloseButton}" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>