<Window x:Class="ProjectWPF.SellerWindows.ProductList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectWPF.SellerWindows"
        mc:Ignorable="d"
        Title="Product List" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Danh sách sản phẩm" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,20,0,20" Grid.Row="0"/>

        <DataGrid x:Name="ProductsDataGrid" Grid.Row="1" AutoGenerateColumns="False" 
                  CanUserAddRows="False" Margin="10" IsReadOnly="True"
                  AlternatingRowBackground="LightGray"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Tên Sản Phẩm" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Mô Tả" Binding="{Binding Description}" Width="250"/>
                <DataGridTextColumn Header="Giá" Binding="{Binding Price, StringFormat={}{0:N0} VND}" Width="120"/>
                <DataGridTextColumn Header="Đơn Vị" Binding="{Binding ProductUnit.Name}" Width="100"/>
                <DataGridCheckBoxColumn Header="Kích Hoạt" Binding="{Binding IsActive}" Width="100"/>
                <DataGridTemplateColumn Header="Hành động" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Chi tiết" Margin="2" Padding="8,4" 
                                        Tag="{Binding Id}" Click="ViewDetail_Click"
                                        Background="LightBlue" BorderBrush="DarkBlue"/>
                                <Button Content="Sửa" Margin="2" Padding="8,4" 
                                        Tag="{Binding Id}" Click="Edit_Click"
                                        Background="LightGreen" BorderBrush="DarkGreen"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Thêm Sản Phẩm" Padding="15,8" Margin="5" 
                    Background="LightGreen" BorderBrush="DarkGreen"
                    Click="AddProduct_Click"/>
            <Button Content="Làm Mới" Padding="15,8" Margin="5" 
                    Background="LightYellow" BorderBrush="Orange"
                    Click="Refresh_Click"/>
            <Button Content="Đóng" Padding="15,8" Margin="5" 
                    Background="LightCoral" BorderBrush="DarkRed"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>